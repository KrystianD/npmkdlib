{
  "compilerOptions": {
    "rootDirs": [
      "src",
      "test"
    ],
    "noImplicitAny": true,
    "outDir": "./dist/",
    "preserveConstEnums": true,
    "removeComments": true,
    "target": "es6",
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "declaration": true
  },
  "exclude": [
    "node_modules",
    "test"
  ]
}
